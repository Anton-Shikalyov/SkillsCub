<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:paddingVertical="15dp"
    android:paddingHorizontal="15dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/sh_frame_position"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:clipToOutline="true">

    <TextView
        android:id="@+id/helpTitleExtended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:text="Courier by car"
        android:textStyle="bold"
        android:textColor="@color/dn_text"
        android:textSize="19sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btnHideExtended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Take a test on the functions of the CRM system and its capabilities for courier work"
        android:textSize="15sp"
        android:textColor="@color/gray_blocked"
        app:layout_constraintTop_toBottomOf="@+id/helpTitleExtended"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/learn_more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:text="@string/learn_more"
        android:textSize="14sp"
        android:layout_margin="0dp"
        android:textColor="@color/blue_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer" />

</androidx.constraintlayout.widget.ConstraintLayout>